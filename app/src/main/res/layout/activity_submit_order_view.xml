<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="80dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_left" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/step_box1"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:cardBackgroundColor="#FF9E99F8"
                    app:cardCornerRadius="45dp"
                    app:strokeColor="#00FFFFFF">


                    <TextView
                        android:id="@+id/step1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#fff7f8f8"
                        android:textSize="30sp" />


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/order_step_1"
                android:textColor="#ff898989"
                android:textSize="15sp" />

        </LinearLayout>


        <View
            android:layout_width="56dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="-22dp"
            android:background="#FF383838" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/step_box2"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:cardBackgroundColor="#FF9E99F8"
                    app:cardCornerRadius="45dp"
                    app:strokeColor="#00FFFFFF">


                    <TextView
                        android:id="@+id/step2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#fff7f8f8"
                        android:textSize="30sp" />


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/order_step_2"
                android:textColor="#ff898989"
                android:textSize="15sp" />

        </LinearLayout>


        <View
            android:layout_width="56dp"
            android:layout_height="2dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="-22dp"
            android:background="#FF383838" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/step_box3"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:cardBackgroundColor="#FF9E99F8"
                    app:cardCornerRadius="45dp"
                    app:strokeColor="#00FFFFFF">


                    <TextView
                        android:id="@+id/step3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#fff7f8f8"
                        android:textSize="30sp" />


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/order_step_3"
                android:textColor="#ff898989"
                android:textSize="15sp" />

        </LinearLayout>


        <View
            android:layout_width="56dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="-22dp"
            android:background="#FF383838" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/step_box4"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:cardBackgroundColor="#FF9E99F8"
                    app:cardCornerRadius="45dp"
                    app:strokeColor="#00FFFFFF">


                    <TextView
                        android:id="@+id/step4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="#fff7f8f8"
                        android:textSize="30sp" />


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/good_status"
                android:textColor="#ff898989"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

    <com.yjkj.service_recoder.java.diyView.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="70dp" />

    <ImageView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/dim_20"
        android:layout_marginBottom="@dimen/dim_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/address_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>