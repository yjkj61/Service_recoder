<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.yjkj.service_recoder.ui.usersecondary.items.ContactsItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:onClick="@{()->viewModel.clickUserItem()}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:onClick="@{()->viewModel.clickUserAvatar()}"
            loadSrc="@{viewModel.userAvatarImg}"
            android:id="@+id/user_avatar_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/dp5_corner_bg_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:text="@{viewModel.bedNumber}"
            android:id="@+id/bed_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/user_avatar_img"
            app:layout_constraintStart_toEndOf="@id/user_avatar_img"
            android:layout_marginStart="12dp"/>
        <TextView
            android:text="@string/bed_number_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/bed_number"
            app:layout_constraintTop_toTopOf="@id/bed_number"
            app:layout_constraintBottom_toBottomOf="@id/bed_number"
            android:layout_marginTop="5dp"
            android:layout_marginStart="6dp"/>
        <TextView
            android:id="@+id/user_name_text"
            android:text="@={viewModel.userName}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/bed_number"
            app:layout_constraintTop_toBottomOf="@+id/bed_number"
            android:layout_marginTop="4dp"
            android:textSize="10dp"
            android:textColor="@color/black"/>
        <View
            bindDrawableColor="@{viewModel.stateColor}"
            android:background="@drawable/white_bg_10_dp_corner_bg_shape"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="@id/user_avatar_img"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:visibility="@{viewModel.sosStateVisibility}"
            android:text="@string/sos_str"
            android:gravity="center"
            android:layout_width="37dp"
            android:layout_height="12dp"
            android:includeFontPadding="false"
            android:textColor="@color/color_FFAF1C"
            android:textSize="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/user_name_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/contacts_sos_shape"/>
        <TextView
            android:visibility="@{viewModel.callingStateVisibility}"
            android:text="@string/calling_str"
            android:gravity="center"
            android:layout_width="37dp"
            android:layout_height="12dp"
            android:includeFontPadding="false"
            android:textColor="@color/color_4580FF"
            android:textSize="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/user_name_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/contacts_calling_shape"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>