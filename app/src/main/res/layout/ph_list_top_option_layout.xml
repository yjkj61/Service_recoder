<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.yjkj.service_recoder.ui.ph.phchecklist.PhCheckListViewModel" />
        <variable
            name="click"
            type="com.yjkj.service_recoder.ui.ph.phchecklist.PhCheckListFragment.Click" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ph_list_top_option_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/backup_btn"
            android:onClick="@{()->click.backup()}"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/baseline_arrow_back"
            android:background="@drawable/blue_bg_5_dp_corner_shape"/>

        <ImageButton
            android:id="@+id/home_btn"
            android:onClick="@{()->click.home()}"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/baseline_home"
            app:layout_constraintStart_toEndOf="@id/backup_btn"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/blue_bg_5_dp_corner_shape"/>

        <ImageButton
            android:id="@+id/add_btn"
            android:onClick="@{()->click.add()}"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/baseline_add_24"
            android:background="@drawable/blue_bg_5_dp_corner_shape"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>