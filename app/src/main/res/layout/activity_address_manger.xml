<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_40">


    <LinearLayout
        android:id="@+id/top_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_weight="1"
            android:text="@string/address"
            android:textColor="#ff9e99f8"
            android:textSize="19sp" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/address_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dim_20"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/address_manger_icon" />


        <TextView
            android:id="@+id/manger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_car_button_back2"
            android:paddingHorizontal="@dimen/dim_30"
            android:paddingVertical="@dimen/dim_14"
            android:text="@string/manger"
            android:layout_marginStart="@dimen/dim_80"

            android:textColor="#ffffffff"
            android:textSize="@dimen/dim_sp_20" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_80"
            android:background="@drawable/shop_car_button_back2"
            android:paddingHorizontal="@dimen/dim_30"
            android:paddingVertical="@dimen/dim_14"

            android:text="@string/add_address"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dim_sp_20" />

    </LinearLayout>

</LinearLayout>