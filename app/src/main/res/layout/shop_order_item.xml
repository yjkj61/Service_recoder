<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dp_10"
    app:cardBackgroundColor="#FFF8F7FC"
    app:cardCornerRadius="8dp"
    app:strokeColor="#00FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingVertical="12dp">

        <LinearLayout
            android:id="@+id/top_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/store_name_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:cardCornerRadius="0dp"
                app:strokeColor="#FFEDA966">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:text="店铺"
                    android:textColor="#ffeda966"
                    android:textSize="11sp" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/store_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="欧姆龙旗舰店"
                android:textColor="#ff000000"
                android:textSize="20sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖家已发货"
                android:textColor="#ffec612a"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/good_info_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_box"
            android:layout_marginTop="20dp"
            android:paddingStart="40dp">

            <ImageView
                android:id="@+id/good_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="18dp"
                android:src="@drawable/good_test" />

            <TextView
                android:id="@+id/good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/good_image"
                android:text="欧姆龙（OMRON）电子血压计家用上臂式血压仪 HEM-7124"
                android:textColor="#ff000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/good_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/good_name"
                android:layout_marginVertical="14dp"
                android:layout_toRightOf="@id/good_image"
                android:text="型号：官方套餐；重量：0.59kg"
                android:textColor="#ff58595b"

                android:textSize="14sp" />

            <com.google.android.material.card.MaterialCardView

                android:id="@+id/activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/good_info"
                android:layout_toRightOf="@id/good_image"

                app:cardCornerRadius="4dp"
                app:strokeColor="#FFEDA966">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:text="7天无理由退货"
                    android:textColor="#ffeda966"
                    android:textSize="11sp" />
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/price"
                android:layout_toStartOf="@id/price"
                android:text="¥"
                android:textColor="#ff3a3a3a"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/good_name"
                android:layout_alignParentEnd="true"
                android:text="189"
                android:textColor="#ff3a3a3a"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price"
                android:layout_alignBaseline="@id/good_info"
                android:layout_alignParentEnd="true"
                android:text="x1"
                android:textColor="#ff58595b"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/pay_info_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity"
                android:layout_alignParentEnd="true"
                android:gravity="bottom"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价"
                    android:textColor="#ffb5b5b5"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="7dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="9dp"
                    android:text="¥"
                    android:textColor="#ffb5b5b5"

                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="189"
                    android:textColor="#ffb5b5b5"
                    android:textSize="21sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="实付款"
                    android:textColor="#ff000000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="¥"
                    android:textColor="#ff000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/final_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="189"
                    android:textColor="#ff000000"
                    android:textSize="21sp" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_info_box"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="25dp"
                    android:paddingVertical="@dimen/dp_10">

<!--                    <ImageView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:src="@mipmap/shop_order_item_icon" />-->

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginStart="@dimen/dp_10"-->
<!--                        android:text="已签收"-->
<!--                        android:textColor="#ff2c2c2c"-->
<!--                        android:textSize="14sp" />-->

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="5-11 18:28"
                        android:textColor="#ff58595b"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="安徽是芜湖市弋江区马龙街道白马小区"
                        android:textColor="#ff58595b"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/look_exm_back"
                android:paddingHorizontal="20dp"
                android:paddingVertical="@dimen/dp_10"
                android:text="查看物流"
                android:textColor="#ff000000"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/sure_get_back"
                android:paddingHorizontal="20dp"
                android:paddingVertical="@dimen/dp_10"
                android:text="确认收货"
                android:textColor="#ffec612a"
                android:textSize="17sp" />


        </LinearLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>