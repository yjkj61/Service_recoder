<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingTop="40dp"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dim_20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_catering_services_local" />

        <LinearLayout
            android:id="@+id/catering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:background="@drawable/catering_services_heder_back"
            android:orientation="horizontal"
            android:paddingHorizontal="14dp">

            <TextView
                android:id="@+id/canteenName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff4d4d4d"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_drop_down_catering_services" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:src="@mipmap/icon_catering_services_order" />

        <TextView
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:background="@drawable/catering_services_heder_back"
            android:paddingHorizontal="14dp"
            android:text="查看所有"
            android:textColor="#ff4d4d4d"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:src="@mipmap/icon_catering_services_card" />

        <TextView
            android:id="@+id/ownerRemainMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:background="@drawable/catering_services_heder_back"
            android:paddingHorizontal="14dp"
            android:text="余额：888"
            android:textColor="#ffe38637"
            android:textSize="17sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dim_30"
            android:layout_weight="0.3"
            android:background="@drawable/menu_type_list_back">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menu_type_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/menu_type_list_back"/>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menu_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_60"
        android:background="#FFEFEFEF"
        android:gravity="end">

        <LinearLayout
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:background="#FFF7CE85"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dim_20">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#ffffffff"
                android:textSize="@dimen/dim_sp_38" />
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ffffffff"
                android:textSize="@dimen/dim_sp_38" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="         去结算"
                android:textColor="#ffffffff"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>