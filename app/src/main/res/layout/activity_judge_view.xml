<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dim_80"
        android:paddingVertical="@dimen/dim_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您对本次服务的评价"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_sp_14" />

        <per.wsj.library.AndRatingBar
            android:layout_width="@dimen/dim_180"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_30"
            android:text="您对本次服务的建议"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_sp_14" />

        <EditText
            android:id="@+id/advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入您的建议"
            android:paddingStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/dim_sp_16" />


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FF76C3F3"
            app:cardCornerRadius="@dimen/dp_4"
            app:strokeColor="#00FFFFFF"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingVertical="@dimen/dp_4"
                android:paddingHorizontal="@dimen/dim_14"
                android:textSize="@dimen/dim_sp_14"
                android:text="提交评价"/>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dim_20"
        android:layout_height="@dimen/dim_20"
        app:layout_constraintEnd_toEndOf="@id/box"
        app:layout_constraintTop_toTopOf="@id/box"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:src="@drawable/ic_close"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>